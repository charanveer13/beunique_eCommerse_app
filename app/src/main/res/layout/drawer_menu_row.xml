<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/layout_menu_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp">

        <com.smartit.beunique.components.BUniqueTextView
            android:id="@+id/tv_menu_row_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Perfume"
            android:textSize="@dimen/_16sdp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/iv_menu_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:contentDescription="@null"
            android:src="@drawable/ic_right_arrow" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/sub_menu_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_menu_row"
        android:layout_marginBottom="@dimen/_2sdp"
        android:background="#E5E5E5"
        android:visibility="gone">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>