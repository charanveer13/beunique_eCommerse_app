<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100sdp"
    android:layout_gravity="center"
    android:padding="@dimen/_2sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/productImage"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_3sdp"
            android:layout_marginTop="20dp"
            android:contentDescription="@null"
            android:src="@drawable/perfume_1" />

        <LinearLayout
            android:id="@+id/layout_product_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_5sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.smartit.beunique.components.BUniqueTextView
                    android:id="@+id/tv_product_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="Good girls 80 ml"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold" />

                <com.smartit.beunique.components.FontAwesomeIcon
                    android:id="@+id/icon_remove_product"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:gravity="center"
                    android:text="@string/icon_cross"
                    android:textColor="@color/row_header_color"
                    android:textSize="@dimen/_16ssp" />

            </LinearLayout>

            <com.smartit.beunique.components.BUniqueTextView
                android:id="@+id/tv_brand_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:gravity="center|start"
                android:singleLine="true"
                android:text="Givenchy"
                android:textColor="@color/row_header_color"
                android:textSize="@dimen/_12sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.smartit.beunique.components.BUniqueTextView
                    android:id="@+id/tv_product_price"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:singleLine="true"
                    android:text="$250.50"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_14sdp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.smartit.beunique.components.FontAwesomeIcon
                        android:id="@+id/minus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.30"
                        android:gravity="center"
                        android:minHeight="@dimen/_20sdp"
                        android:minWidth="@dimen/_20sdp"
                        android:text="@string/icon_minus"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/value"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.40"
                        android:background="@color/gray_default"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center"
                        android:text="20"
                        android:textAlignment="center"
                        android:textSize="@dimen/_16sdp" />

                    <com.smartit.beunique.components.FontAwesomeIcon
                        android:id="@+id/plus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.30"
                        android:gravity="center"
                        android:minHeight="@dimen/_20sdp"
                        android:minWidth="@dimen/_20sdp"
                        android:text="@string/icon_plus"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="normal" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>